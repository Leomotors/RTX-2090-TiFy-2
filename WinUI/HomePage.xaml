<Page
    x:Class="RTX_2090_TiFy.HomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:RTX_2090_TiFy"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    mc:Ignorable="d">


    <StackPanel>
        <TextBlock
            FontSize="32"
            FontWeight="SemiBold"
            TextAlignment="Center">
            Welcome to RTX 2090 TiFy
        </TextBlock>

        <StackPanel Orientation="Horizontal">
            <StackPanel Padding="10" Orientation="Vertical">
                <TextBlock Style="{StaticResource Header2}">Input Image</TextBlock>
                <Button Click="SelectInput_Click" FontSize="16">Select Input Image</Button>
                <TextBlock Margin="0,10,0,5" Style="{StaticResource TextXL}">Image Preview</TextBlock>
                <muxc:ProgressBar
                    x:Name="InputLoadProgress"
                    IsIndeterminate="True"
                    Visibility="Collapsed" />
                <Border
                    Width="300"
                    Height="300"
                    BorderBrush="{ThemeResource ButtonDisabledBorderThemeBrush}"
                    BorderThickness="1"
                    CornerRadius="3">
                    <Image
                        x:Name="InputImage"
                        Width="300"
                        Height="300" />
                </Border>

            </StackPanel>

            <StackPanel Padding="10" Orientation="Vertical">
                <TextBlock FontSize="69">TODO</TextBlock>
            </StackPanel>
        </StackPanel>
    </StackPanel>

</Page>
